# === Shell and Startup ===
shell-integration = zsh
command = /bin/zsh -l -c "tmux new -A -s default"

# === Environment ===
term = "xterm-256color"

# === Window ===
macos-option-as-alt = left
window-padding-x = 5
window-padding-y = 5

# === Scrolling ===
scrollback-limit = 20000

# === Font ===
font-family = MesloLGS NF
font-style = Regular
# font-size = 14.0

# === Cursor ===
cursor-style = block
cursor-style-blink = true

# === Colors ===
bold-is-bright = true

background = #000000
foreground = #c7c7c7

cursor-color = #c7c7c7
cursor-text = #fffeff

selection-background = #c1ddff
selection-foreground = #000000

# --- Normal colors ---
palette = 0=#000000
palette = 1=#c91b00
palette = 2=#00c200
palette = 3=#c7c400
palette = 4=#0225c7
palette = 5=#c930c7
palette = 6=#00c5c7
palette = 7=#c7c7c7

# --- Bright colors ---
palette = 8=#676767
palette = 9=#ff6d67
palette = 10=#5ff967
palette = 11=#fefb67
palette = 12=#6871ff
palette = 13=#ff76ff
palette = 14=#5ffdff
palette = 15=#fffeff
